<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Каршеринг</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
<div class="container text-color" style="max-width: 95%; margin-top: -4px; margin-bottom: 30px; ">

    <div class="mob text-center" id="menu">

        <div style="margin-top: 55px;">
            <button id="close" type="button" class="close showCross" ></button>
            <ul class="nav nav-pills justify-content-end m-auto list-items" style="max-width: 95%; justify-content: space-around !important; ">


                <li class="nav-item" style="margin-left: 45px;">
                    <div class="sauron" >
                        <img src="sauron.png" style="text-decoration: none; margin-left: -210px;" class="sauron-picture img700"/>
                        <span class="mobhide sauronHide"><div id="b-text" style="display: none; margin-top: -47px; "><a class="nav-link">Sauron Drive</a></div></span>
                    </div>
                </li>


            </ul>

        </div>
    </div>
    <hr style="color: grey">


    <div class="row main" style="padding-bottom: 20px;">
        <div class="col-xs-12 col-lg-12 text-center" style="margin-top: 10px;">
            <h1>Регистрация</h1>
            <hr>
        </div>
    </div>
    <div class="row main">
        <div class="col-xs-12 col-lg-3">

        </div>
        <div class="col-xs-12 col-lg-6 text-center">
            <form name="signUpUser" method="post" action="/register">
                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Логин</label>
                    <input class="form-control {{#alreadyExists}}is-invalid{{/alreadyExists}}"
                           id="usernameInput"
                           name="username" type="text" placeholder="Логин">
                    <div class="invalid-feedback">
                        Такой логин уже существует
                    </div>
                </div>
                <div class="mb-3">
                    <label for="passwordInput" class="form-label">Пароль</label>
                    <input class="form-control {{#notMatched}}is-invalid{{/notMatched}}"
                           id="passwordInput"
                           name="password" type="password"
                           placeholder="Пароль">
                    <div class="invalid-feedback">
                        Неверный пароль
                    </div>
                </div>
                <div class="mb-3">
                    <label for="matchingPasswordInput" class="form-label">Подтверждение пароля</label>
                    <input class="form-control {{#notMatched}}is-invalid{{/notMatched}}"
                           id="matchingPasswordInput"
                           name="matchingPassword" type="password"
                           placeholder="Подтверждение пароля">
                    <div class="invalid-feedback">
                        Неверный пароль
                    </div>
                </div>
                <br>
                <button type="submit" class="btn btn-outline-primary" style="color: black; border-color: black;">Регистрация</button>
            </form>
        </div>
        <div class="col-xs-12 col-lg-3">

        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
<script type="text/javascript">
    $(document).ready(function(){
        $.fn.animate_Text = function() {
            var string = this.text();
            return this.each(function(){
                var $this = $(this);
                $this.html(string.replace(/./g, '<span class="new">$&</span>'));
                $this.find('span.new').each(function(i, el){
                    setTimeout(function(){ $(el).addClass('div_opacity'); }, 20 * i);
                });
            });
        };
        $('#b-text').show();
        $('#b-text').animate_Text();
    });
</script>
<script>
    $("#open").click(function() {
        $("#menu").addClass('bruh');
        $("#overf").addClass('overf');
    });

    $("#close").click(function() {
        $("#menu").removeClass('bruh');
        $("#overf").removeClass('overf');
    });
</script>
<script>
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>
</body>
</html>
